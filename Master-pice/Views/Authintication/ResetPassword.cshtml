@model Master_pice.ViewModel.ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">

<style>
    .form-gap {
        padding-top: 70px;
    }

    .form-group:hover {
        background-color: #743a43;
    }

    .input-group input {
        border: 1px solid #d35266;
    }

    .navbar .icons img, .navbar .icons svg {
        width: 24px;
        height: 24px;
        margin: 0 10px;
        cursor: pointer;
        position: relative;
        rigth: 20%;
        left: 350%;
    }

    .navbar .logo {
        font-size: 24px;
        font-weight: bold;
        position: relative;
        right: 13%;
    }
</style>

<div class="form-gap"></div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Reset Password</h2>
                        <p>Enter your new password below.</p>
                        <div class="panel-body">

                            <form asp-action="ResetPassword" asp-controller="Authintication" method="post" role="form" autocomplete="off" class="form">

                                <input type="hidden" asp-for="UserId" />

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                        <input asp-for="Password" placeholder="New Password" class="form-control" type="password" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" type="password" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input style="background-color:#d35266;" class="btn btn-lg btn-primary btn-block" value="Update Password" type="submit">
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
