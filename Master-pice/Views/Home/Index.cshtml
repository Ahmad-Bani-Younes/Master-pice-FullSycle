<script>
    const text ="Best gadgets, best value, excellent service";
    const target = document.getElementById("animatedText");
    let index = 0;

    function typeChar() {
        if (index < text.length) {
            target.innerHTML += text.charAt(index);
            index++;
            setTimeout(typeChar, 70);
        } else {
            // إعادة تعيين بعد انتهاء الكتابة
            setTimeout(() => {
                target.innerHTML = "";
                index = 0;
                typeChar();
            }, 1000); // مهلة بسيطة قبل إعادة الكتابة (اختياري)
        }
    }

    document.addEventListener("DOMContentLoaded", typeChar);
</script>
<script>
    setTimeout(function () {
        var success = document.getElementById('successMessage');
        var error = document.getElementById('errorMessage');
        if (success) {
            success.classList.remove('show');
            success.classList.add('hide');
        }
        if (error) {
            error.classList.remove('show');
            error.classList.add('hide');
        }
    }, 3000); // 3000 ميلي ثانية = 3 ثواني
</script>