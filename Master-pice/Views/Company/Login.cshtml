@{
    ViewData["Title"] = "Company Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Company Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Fonts & Styles -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/newLogin/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <style>
        body {
            font-family: 'Lato', sans-serif;
            background: transparent !important;
        }

        #bgVideo {
            position: fixed;
            right: 0;
            bottom: 0;
            min-width: 100%;
            min-height: 100%;
            z-index: -1;
            object-fit: cover;
            opacity: 0.25;
        }

        .wrap {
            background: #fff;
            border-radius: 15px;
            overflow: hidden;
            display: flex;
            min-height: 600px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        }

        .login-wrap {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .text-wrap {
            flex: 1;
            /* background: linear-gradient(135deg, #f953c6, #b91d73); */
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 60px;
        }

        .form-control {
            border-radius: 50px;
            padding-left: 20px;
            background: #f5f5f5;
        }

        .btn-login {
            border-radius: 50px;
            /* background: linear-gradient(to right, #f953c6, #b91d73); */
            background-color: #f35588;
            color: white;
            font-weight: bold;
            transition: 0.3s;
            border: none;
        }

       

        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            font-size: 0.9rem;
            margin-top: 10px;
        }

            /* .remember-forgot a { */
            /*     color: #555; */
            /*     text-decoration: none; */
            /* } */

            /*     .remember-forgot a:hover { */
            /*         text-decoration: underline; */
            /*     } */
    </style>
</head>
<body>

    <!-- Background video -->
    <video autoplay muted loop id="bgVideo">
        <source src="~/Video/4496268-hd_1920_1080_25fps.mp4" type="video/mp4">
    </video>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="wrap">

                    <!-- Form Section -->
                    <div class="login-wrap animate__animated animate__fadeInLeft animate__faster">
                        <h3 class="mb-4">Sign In</h3>

                        <form asp-action="Login" asp-controller="Company" method="post">
                            <div class="form-group mb-3">
                                <label>Email</label>
                                <input name="email" type="email" class="form-control" placeholder="Enter your email" required />
                            </div>

                            <div class="form-group mb-3">
                                <label>Password</label>
                                <input name="password" type="password" class="form-control" placeholder="Enter your password" required />
                            </div>

                            <div class="form-group mb-4">
                                <button type="submit" class="form-control btn btn-login">Sign In</button>
                            </div>

                            <div class="remember-forgot">
                                <div>
                                    <input type="checkbox" id="rememberMe" />
                                    <label for="rememberMe" class="ms-1">Remember Me</label>
                                </div>
                                <a href="#">Forgot Password</a>
                            </div>
                        </form>
                    </div>

                    <!-- Welcome Section -->
                    <div class="text-wrap animate__animated animate__fadeInRight animate__faster">
                        <h2 class="mb-3">Welcome to login</h2>
                        <p class="mb-4">Don't have an account?</p>
                        <a href="@Url.Action("Register", "Company")" class="btn btn-outline-light rounded-pill px-4">Sign Up</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="~/newLogin/js/jquery.min.js"></script>
    <script src="~/newLogin/js/popper.js"></script>
    <script src="~/newLogin/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
