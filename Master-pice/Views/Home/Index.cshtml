    <section class="desktop-sec bg-light py-4">
        <div class="sec-title d-flex justify-content-start align-items-center desktop-cont m-auto">
            <i style="color: #dc3545;" class="fas fa-desktop fa-2x mr-4 defgrey opacity"></i>
            @* <a style="color: #dc3545; text-decoration: none;" href="categories.html">View More Desktops</a> *@
            <a style="color: #dc3545; text-decoration: none;" asp-action="PCs"
               asp-controller="Categories"
               asp-route-type="Desktops"
               class="view-more-link">
                <i class="fa fa-desktop"></i> View More Desktops
            </a>

        </div>

        <hr>

        <div id="desktopCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
            <div class="carousel-inner">
                @for (int i = 0; i < desktops.Count; i++)
                {
                    var pc = desktops[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="ad-cont width-70">
                            <div class="ad-item d-md-flex d-block">
                                <div class="img-item">
                                    <img src="@pc.ImageURL" alt="desktop" class="d-img" />
                                </div>
                                <div class="text-item ml-3">
                                    <h2 class="text-title lato">@pc.Brand @pc.Processor</h2>
                                    <p class="text-justify text-body catamaran">@pc.Description</p>

                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        <a href="@Url.Action("Details", "Product", new { id = pc.PCID, type = "pc" })" class="btn btn-danger">
                                            Purchase Details
                                        </a>

                                        <form asp-action="AddToCart" asp-controller="Categories" method="post">
                                            <input type="hidden" name="ProductId" value="@pc.PCID" />
                                            <input type="hidden" name="Type" value="pc" />
                                            <input type="hidden" name="Quantity" value="1" />
                                            <button type="submit" class="btn btn-outline-danger">Add to Cart</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>



            <a class="carousel-control-prev" href="#desktopCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-danger p-3" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#desktopCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-danger p-3" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
    <!--end of item-list -->
    <!-- start of item-list-2 -->

    <section class="desktop-sec bg-light py-4">
        <div class="sec-title d-flex justify-content-start align-items-center desktop-cont m-auto">
            <i style="color: #dc3545;" class="fas fa-laptop fa-2x mr-4 defgrey opacity"></i>
            @* <a style="color: #dc3545; text-decoration: none;" href="categories.html">View More Laptops</a> *@

            <a style="color: #dc3545; text-decoration: none;" asp-action="Laptops"
               asp-controller="Categories"
             asp-route-type="Laptop"
               class="view-more-link">
                <i class="fa fa-desktop"></i> View More Laptops
            </a>

        </div>

        <hr>

        <div id="laptopCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
            <div class="carousel-inner">
                @for (int i = 0; i < laptops.Count; i++)
                {
                    var laptop = laptops[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="ad-cont width-70">
                            <div class="ad-item d-md-flex d-block">
                                <div class="img-item">
                                    <img src="@laptop.ImageURL" alt="laptop" class="d-img" />
                                </div>
                                <div class="text-item ml-3">
                                    <h2 class="text-title lato">@laptop.Brand @laptop.Model</h2>
                                    <p class="text-justify text-body catamaran">@laptop.Description</p>

                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        <a href="@Url.Action("Details", "Product", new { id = laptop.LaptopID, type = "laptop" })" class="btn btn-danger">
                                            Purchase Details
                                        </a>

                                        <form asp-action="AddToCart" asp-controller="Categories" method="post">
                                            <input type="hidden" name="ProductId" value="@laptop.LaptopID" />
                                            <input type="hidden" name="Type" value="laptop" />
                                            <input type="hidden" name="Quantity" value="1" />
                                            <button type="submit" class="btn btn-outline-danger">Add to Cart</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


            <a class="carousel-control-prev" href="#laptopCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-danger p-3" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#laptopCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-danger p-3" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <!--end of item-list-2 -->
    <!-- start of item-list-3 -->
    <section class="desktop-sec bg-light py-4">
        <div class="sec-title d-flex justify-content-start align-items-center desktop-cont m-auto">
            @* <a style="color: #dc3545; text-decoration: none;" href="categories.html">View More PC Parts</a> *@

            <a style="color: #dc3545; text-decoration: none;" asp-action="PCParts"
               asp-controller="Categories"
               asp-route-type="PC Parts"
               class="view-more-link">
                <i class="fa fa-desktop"></i> View More PC Parts
            </a>

        </div>

        <hr>

        <div id="partsCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
            <div class="carousel-inner">
                @for (int i = 0; i < parts.Count; i++)
                {
                    var part = parts[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="ad-cont width-70">
                            <div class="ad-item d-md-flex d-block">
                                <div class="img-item">
                                    <img src="@part.ImageURL" alt="part" class="d-img" />
                                </div>
                                <div class="text-item ml-3">
                                    <h2 class="text-title lato">@part.Brand @part.Model</h2>
                                    <p class="text-justify text-body catamaran">@part.Compatibility</p>

                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        <a href="@Url.Action("Details", "Product", new { id = part.PartID, type = "pcpart" })" class="btn btn-danger">
                                            Purchase Details
                                        </a>

                                        <form asp-action="AddToCart" asp-controller="Categories" method="post">
                                            <input type="hidden" name="ProductId" value="@part.PartID" />
                                            <input type="hidden" name="Type" value="pcpart" />
                                            <input type="hidden" name="Quantity" value="1" />
                                            <button type="submit" class="btn btn-outline-danger">Add to Cart</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


            <a class="carousel-control-prev" href="#partsCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-danger p-3" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#partsCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-danger p-3" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
    <!-- end of item-3 -->
</main>


