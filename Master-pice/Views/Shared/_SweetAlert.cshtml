<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                    Swal.fire({
                        icon: 'success',
                        title: '✔️ Success!',
                        text: '@TempData["SuccessMessage"]',
                        background: '#ffffff', // أبيض صافي
                        color: '#2e2e2e',
                        backdrop: `
                            rgba(0,0,0,0.4)
                        `,
                        showConfirmButton: true,
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#3085d6',
                        buttonsStyling: true,
                        customClass: {
                            popup: 'rounded-4 shadow p-4',
                            title: 'fw-bold fs-3 text-success',
                            content: 'text-dark fs-6',
                            confirmButton: 'btn btn-primary px-4 py-2 fs-6 fw-bold'
                        },
                        showClass: {
                            popup: 'animate__animated animate__fadeInDown'
                        },
                        hideClass: {
                            popup: 'animate__animated animate__fadeOutUp'
                        }
                    });
        </text>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <text>
                    Swal.fire({
                        icon: 'error',
                        title: '❌ Error!',
                        text: '@TempData["ErrorMessage"]',
                        background: '#ffffff',
                        color: '#2e2e2e',
                        backdrop: `
                            rgba(0,0,0,0.4)
                        `,
                        showConfirmButton: true,
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#d33',
                        buttonsStyling: true,
                        customClass: {
                            popup: 'rounded-4 shadow p-4',
                            title: 'fw-bold fs-3 text-danger',
                            content: 'text-dark fs-6',
                            confirmButton: 'btn btn-danger px-4 py-2 fs-6 fw-bold'
                        },
                        showClass: {
                            popup: 'animate__animated animate__fadeInDown'
                        },
                        hideClass: {
                            popup: 'animate__animated animate__fadeOutUp'
                        }
                    });
        </text>
    }
    });
</script>

<!-- إضافة أنميشن CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
