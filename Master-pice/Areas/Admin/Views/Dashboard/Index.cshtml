@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<!-- Animate.css مكتبة الأنميشن -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<nav class="navbar navbar-expand-lg navbar-light main-header bg-dark">
    <a class="navbar-brand text-white" href="#">Admin Dashboard</a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link text-white" href="#">Welcome, Admin</a>
            </li>
        </ul>
    </div>
</nav>

<!-- Statistics -->
<div class="container mt-4">
    <div class="row">
        @{
            var cards = new[] {
        new { Title = "Total Users", Count = ViewBag.Users },
        new { Title = "Total Products", Count = ViewBag.Products },
        new { Title = "Completed Orders", Count = ViewBag.Completed },
        new { Title = "Cancelled Orders", Count = ViewBag.Cancelled },
        new { Title = "Processing Orders", Count = ViewBag.Processing }
        };
        }

        @foreach (var card in cards)
        {
            <div class="col-md-3 mb-4">
                <div class="card text-white animate__animated animate__fadeInUp animate__faster" style="background-color: #343a40;">
                    <div class="card-body text-center">
                        <h5 class="card-title fs-5">@card.Title</h5>
                        <p class="card-text display-6 fw-bold">@card.Count</p>
                    </div>
                </div>
            </div>
        }
    </div>

   

    <!-- New Section: Activity Feed -->
    <div class="row mt-5">
        <h4 class="text-center mb-4 animate__animated animate__fadeInDown">Recent Activities</h4>
        <div class="col-12">
            <div class="list-group shadow-sm">

                @if (ViewBag.RecentActivities != null && ViewBag.RecentActivities.Count > 0)
                {
                    int delay = 1;
                    foreach (var activity in ViewBag.RecentActivities)
                    {
                        <div class="list-group-item animate__animated animate__fadeInUp animate__delay-@delay">
                            @activity
                        </div>
                        delay++;
                    }
                }
                else
                {
                    <div class="list-group-item animate__animated animate__fadeIn">
                        No recent activities found.
                    </div>
                }

            </div>
        </div>
    </div>

</div>

<!-- Optional: تغيير خلفية الصفحة بدل اللون الأبيض -->
<style>
    body {
        background-color: #f8f9fa;
    }
</style>
