@model Master_pice.ViewModel.ContactMessageViewModel

@{
    ViewData["Title"] = "ContactUs";
    // إلغاء الـ Layout الرئيسي لاستخدام تمبلت كامل
}

<!doctype html>
<html lang="en">
<head>
    <style>
        #bgVideo {
            position: fixed;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
            object-fit: cover;
            z-index: -1;
            opacity: 0.3;
        }

        body {
            background: transparent !important;
        }

        .dropdown-menu {
            background-color: white;
            color: black;
            border-radius: 5px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 10px;
        }


        .dropdown-item {
            color: #007bff;
            cursor: pointer;
        }

    </style>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/contact-form-19/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/contact-form-19/css/style.css">

    @* <title>Contact Form #9</title> *@
</head>
<body>

   


    <!-- Background Video -->
    <video autoplay muted loop id="bgVideo">
        <source src="~/video/4496268-hd_1920_1080_25fps.mp4" type="video/mp4">
        Your browser does not support HTML5 video.
    </video>

    <div class="content">
        <div class="container">
            <div class="row align-items-stretch no-gutters contact-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3>Contact Us</h3>
                        <form asp-action="SendMessage" asp-controller="Home" method="post" class="mb-5" id="contactForm" name="contactForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row">
                                <div class="col-md-6 form-group mb-3">
                                    <label class="col-form-label">First Name *</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label class="col-form-label">Last Name *</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group mb-3">
                                    <label class="col-form-label">Email *</label>
                                    <input asp-for="Email" class="form-control" placeholder="Email Address" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group mb-3">
                                    <label class="col-form-label">Message *</label>
                                    <textarea asp-for="Message" class="form-control" cols="30" rows="4" placeholder="Write your message" required></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="submit" value="Send Message" class="btn btn-primary rounded-0 py-2 px-4">
                                    <span class="submitting"></span>
                                </div>
                            </div>
                        </form>

                        <div id="form-message-warning mt-4"></div>
                        <div id="form-message-success">Your message was sent, thank you!</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* <script src="~/contact-form-19/js/jquery-3.3.1.min.js"></script>   *@
    @* <script src="~/contact-form-19/js/popper.min.js"></script> *@
    @* <script src="~/contact-form-19/js/bootstrap.min.js"></script> *@
    @* <script src="~/contact-form-19/js/jquery.validate.min.js"></script> *@
     @* <script src="~/contact-form-19/js/main.js"></script> *@
    @* <partial name="_ValidationScriptsPartial" />*@
</body>
</html>

<script>
    setTimeout(function () {
        var success = document.getElementById('successMessage');
        var error = document.getElementById('errorMessage');
        if (success) {
            success.classList.remove('show');
            success.classList.add('hide');
        }
        if (error) {
            error.classList.remove('show');
            error.classList.add('hide');
        }
    }, 3000); // 3000 ميلي ثانية = 3 ثواني
</script>



























