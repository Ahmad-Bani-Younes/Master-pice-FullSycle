@model Master_pice.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "EditProduct";
}
@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<h2 class="text-primary">Edit Product - @Model.Type</h2>

<form asp-action="EditProduct" asp-controller="ProductAdmin" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input type="hidden" name="ID" value="@Model.ID" />
    <input type="hidden" name="Type" value="@Model.Type" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="Description" class="form-control">@Model.Description</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" name="Price" step="0.01" class="form-control" value="@Model.Price" />
    </div>

    <div class="mb-3">
        <label class="form-label">Brand</label>
        <input type="text" name="Brand" class="form-control" value="@Model.Brand" />
    </div>

    <div class="mb-3">
        <label class="form-label">Processor</label>
        <input type="text" name="Processor" class="form-control" value="@Model.Processor" />
    </div>

    <div class="mb-3">
        <label class="form-label">RAM</label>
        <input type="text" name="RAM" class="form-control" value="@Model.RAM" />
    </div>

    <div class="mb-3">
        <label class="form-label">Storage</label>
        <input type="text" name="Storage" class="form-control" value="@Model.Storage" />
    </div>

    <div class="mb-3">
        <label class="form-label">GPU</label>
        <input type="text" name="GPU" class="form-control" value="@Model.GPU" />
    </div>

    <div class="mb-3">
        <label class="form-label">Screen Size</label>
        <input type="number" name="ScreenSize" class="form-control" value="@Model.ScreenSize" />
    </div>

    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input type="number" name="Stock" class="form-control" value="@Model.Stock" />
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ImageURL))
    {
        <div class="mb-3">
            <label>Current Image</label><br />
            <img src="~/uploads/@Model.ImageURL" width="100" />
        </div>
    }

    <div class="mb-3">
        <label>Upload New Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Upload Additional Images</label>
        <input type="file" name="AdditionalImages" class="form-control" multiple />
    </div>

    @if (Model.AdditionalImageURLs?.Any() == true)
    {
        <div class="mb-3">
            <label>Current Additional Images:</label>
            <div class="d-flex flex-wrap gap-2">
                @foreach (var img in Model.AdditionalImageURLs)
                {
                    <img src="~/uploads/@img" width="80" class="border rounded" />
                }
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
