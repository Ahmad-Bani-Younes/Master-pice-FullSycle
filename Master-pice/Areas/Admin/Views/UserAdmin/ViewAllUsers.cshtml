@model List<Master_pice.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<h2 class="text-danger">Manage Users</h2>

@* <!-- Button to add a new user --> *@
@* <a href="@Url.Action("AddUser", "UserAdmin", new { area = "Admin" })" class="btn btn-danger mb-3"> *@
@*     <i class="fas fa-plus"></i> Add New User *@
@* </a> *@

<!-- Table to display users -->
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Profile Image</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>User Type</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrWhiteSpace(user.ProfileImage))
                    {
                        <img src="~/uploads/@user.ProfileImage" alt="Profile Image" class="img-fluid" style="max-width: 80px; height: auto;" />
                    }
                    else
                    {
                        <i class="fas fa-user-circle" style="font-size: 40px; color: #007bff;"></i>
                    }
                </td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.UserType</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td class="d-flex gap-1">
                    <!-- View Button -->
                    <a href="@Url.Action("ViewUserDetails", "UserAdmin", new { id = user.ID })" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination if needed -->
<div class="d-flex justify-content-center mt-4">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</div>
