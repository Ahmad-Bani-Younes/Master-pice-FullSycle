@{
    ViewData["Title"] = "Edit Profile";
}
@model Master_pice.Models.User

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="styles.css">

<h2 class="text-danger">Edit Profile</h2>

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Profile</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a asp-controller="Authintication" asp-action="Profile">Account Information</a>
                        </li>
                        <li class="list-group-item">
                            <a asp-controller="User" asp-action="MyOrders">My Orders</a>
                        </li>
                        <li class="list-group-item">
                            <a asp-controller="User" asp-action="MyWishList">My Wish List</a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit Account Information</h5>
                    <form method="post" asp-action="EditProfile" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ID" />
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <img src="~/uploads/@Model.ProfileImage" alt="Current Profile Image" class="rounded-circle" width="120" height="120" style="object-fit: cover;" />
                            <br />
                            <label class="form-label">Upload New Profile Image</label>
                            <input type="file" name="NewProfileImage" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-danger">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
